@startuml
'https://plantuml.com/sequence-diagram


class Telecommande{


   + allumer(Int)
   + eteindre(Int)
   + activerTout()
   + toString() : String
}
class (Lampe){
- nom : String
- allumer : boolean

+ toString() : String

}
class Hifi{
- son : int
+ allumer()
+ toString() : String
}

class Television{

+allumer()
+eteindre()
}

interface Appareils{

+ toString() : String
+ isAllumer() : boolean
}

Hifi ..|> Appareils
Lampe ..|>"*" Appareils
Television "*"..|>"*" Appareils
Telecommande "*" --> "*"  Appareils : - appareils
@enduml